@model BaiTHbuoi1.Models.Contact

@{
    ViewData["Title"] = "Xóa Tin Nhắn Liên Hệ";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Xóa Tin Nhắn Liên Hệ</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Tin Nhắn Liên Hệ</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Xóa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-danger text-white py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <span class="fw-semibold">Xác Nhận Xóa Tin Nhắn</span>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-danger bg-danger bg-opacity-25 border-danger" role="alert">
                <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Cảnh Báo!</h4>
                <p>Bạn có chắc chắn muốn xóa tin nhắn này?</p>
                <p>Hành động này không thể hoàn tác. Tin nhắn sẽ bị xóa vĩnh viễn.</p>
            </div>
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-3 text-light-50">Người Gửi:</dt>
                        <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 text-light-50">Email:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3 text-light-50">Tiêu Đề:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                        <dt class="col-sm-3 text-light-50">Thời Gian:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header bg-dark border-secondary">
                    <i class="fas fa-comment me-1"></i> Nội Dung Tin Nhắn
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(model => model.Message)</p>
                </div>
            </div>
            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xóa Tin Nhắn
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
