@model BaiTHbuoi1.Models.Contact

@{
    ViewData["Title"] = "Chi Tiết Tin Nhắn Liên Hệ";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Tin Nhắn Liên Hệ</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Tin Nhắn Liên Hệ</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-envelope me-2"></i>
                    <span class="fw-semibold">Tin Nhắn Từ @Model.Name</span>
                </div>
                <div>
                    @if (Model.IsRead)
                    {
                        <span class="badge bg-success">Đã Đọc</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Chưa Đọc</span>
                    }
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-3 text-light-50">Người Gửi:</dt>
                        <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 text-light-50">Email:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3 text-light-50">Điện Thoại:</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Phone) ? "Không có" : Model.Phone)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-3 text-light-50">Tiêu Đề:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                        <dt class="col-sm-3 text-light-50">Thời Gian:</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
            <div class="card bg-dark border-secondary">
                <div class="card-header bg-dark border-secondary">
                    <i class="fas fa-comment me-1"></i> Nội Dung Tin Nhắn
                </div>
                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(model => model.Message)</p>
                </div>
            </div>
            <div class="mt-4">
                <div class="btn-group" role="group">
                    <a href="mailto:@Model.Email" class="btn btn-primary">
                        <i class="fas fa-reply me-1"></i> Trả Lời Qua Email
                    </a>
                    @if (Model.IsRead)
                    {
                        <form asp-action="MarkAsUnread" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-envelope me-1"></i> Đánh Dấu Chưa Đọc
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="MarkAsRead" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-envelope-open me-1"></i> Đánh Dấu Đã Đọc
                            </button>
                        </form>
                    }
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Xóa
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="fas fa-arrow-left me-1"></i> Quay Lại
        </a>
    </div>
</div>
