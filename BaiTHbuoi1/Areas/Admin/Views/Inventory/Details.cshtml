@model BaiTHbuoi1.Models.Inventory

@{
    ViewData["Title"] = "Chi Tiết Phiếu Nhập Kho";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Phiếu Nhập Kho</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Kho Hàng</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-edit me-1"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <span class="fw-semibold">Thông Tin Phiếu Nhập Kho</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-light-50">Sản Phẩm:</dt>
                        <dd class="col-sm-8 fw-semibold">@(Model.Product?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4 text-light-50">Nhà Cung Cấp:</dt>
                        <dd class="col-sm-8">@(Model.Supplier?.Name ?? "N/A")</dd>

                        <dt class="col-sm-4 text-light-50">Số Lượng:</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>

                        <dt class="col-sm-4 text-light-50">Ngày Nhập:</dt>
                        <dd class="col-sm-8">@Model.ReceivedDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4 text-light-50">Ghi Chú:</dt>
                        <dd class="col-sm-8">
                            @if (string.IsNullOrEmpty(Model.Notes))
                            {
                                <span class="text-light-50">Không có ghi chú</span>
                            }
                            else
                            {
                                @Model.Notes
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark border-secondary py-3">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Quay Lại
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-auto">
                    <i class="fas fa-trash me-1"></i> Xóa
                </a>
            </div>
        </div>
    </div>
</div>