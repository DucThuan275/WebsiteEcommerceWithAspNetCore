@model BaiTHbuoi1.Models.Inventory

@{
    ViewData["Title"] = "Chỉnh Sửa Phiếu Nhập Kho";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chỉnh Sửa Phiếu Nhập Kho</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Kho Hàng</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chỉnh Sửa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-edit me-2"></i>
                <span class="fw-semibold">Chỉnh Sửa Thông Tin Phiếu Nhập</span>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning bg-warning bg-opacity-25 border-warning text-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo:</strong> Chỉnh sửa phiếu này sẽ cập nhật số lượng tồn kho của sản phẩm. Vui lòng đảm bảo số lượng chính xác.
            </div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-25 border-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Sản Phẩm <span class="text-danger">*</span></label>
                            <select asp-for="ProductId" class="form-select bg-dark text-light border-secondary" asp-items="ViewBag.ProductId">
                                <option value="">-- Chọn Sản Phẩm --</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SupplierId" class="form-label">Nhà Cung Cấp</label>
                            <select asp-for="SupplierId" class="form-select bg-dark text-light border-secondary" asp-items="ViewBag.SupplierId">
                                <option value="">-- Chọn Nhà Cung Cấp --</option>
                            </select>
                            <span asp-validation-for="SupplierId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Số Lượng <span class="text-danger">*</span></label>
                            <input asp-for="Quantity" class="form-control bg-dark text-light border-secondary" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ReceivedDate" class="form-label">Ngày Nhập <span class="text-danger">*</span></label>
                            <input asp-for="ReceivedDate" class="form-control bg-dark text-light border-secondary" type="date" />
                            <span asp-validation-for="ReceivedDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Ghi Chú</label>
                            <textarea asp-for="Notes" class="form-control bg-dark text-light border-secondary" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu Thay Đổi
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}