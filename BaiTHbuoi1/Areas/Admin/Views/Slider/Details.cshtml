@model BaiTHbuoi1.Models.Slider

@{
    ViewData["Title"] = "Chi Tiết Slider";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Slider</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Sliders</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-info text-white py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <span class="fw-semibold">Thông Tin Slider</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-light-50">Mã Slider:</dt>
                        <dd class="col-sm-8 fw-semibold">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4 text-light-50">Tiêu Đề:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4 text-light-50">Tiêu Đề Phụ:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Subtitle)</dd>

                        <dt class="col-sm-4 text-light-50">Đường Dẫn:</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.LinkUrl))
                            {
                                <a href="@Model.LinkUrl" target="_blank" class="text-info">@Model.LinkUrl</a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-light-50">Thứ Tự Hiển Thị:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DisplayOrder)</dd>

                        <dt class="col-sm-4 text-light-50">Trạng Thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Đang Kích Hoạt</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã Vô Hiệu</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <div class="border border-secondary p-2 rounded">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" style="max-height: 300px;" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>
