@model IEnumerable<BaiTHbuoi1.Models.Slider>

@{
    ViewData["Title"] = "Quản Lý Sliders";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Quản Lý Sliders</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Sliders</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Thêm Mới
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-table me-2"></i>
                <span class="fw-semibold">Danh Sách Sliders</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-hover" id="slidersTable">
                    <thead>
                        <tr>
                            <th>Hình Ảnh</th>
                            <th>Tiêu Đề</th>
                            <th>Tiêu Đề Phụ</th>
                            <th>Thứ Tự</th>
                            <th>Trạng Thái</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ImageUrl" alt="@item.Title" class="img-thumbnail bg-dark" style="max-width: 100px; max-height: 60px;" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Subtitle</td>
                                <td>@item.DisplayOrder</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Đang Kích Hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Đã Vô Hiệu</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a asp-action="ToggleActive" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Đổi trạng thái">
                                            <i class="fas fa-toggle-on"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#slidersTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/vi.json'
                }
            });
        });
    </script>
}
