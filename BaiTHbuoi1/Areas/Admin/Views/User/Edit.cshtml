@model BaiTHbuoi1.Areas.Admin.Controllers.UserEditViewModel

@{
    ViewData["Title"] = "Chỉnh Sửa Người Dùng";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chỉnh Sửa Người Dùng</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Người Dùng</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chỉnh Sửa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-user-edit me-2"></i>
                <span class="fw-semibold">Chỉnh Sửa Thông Tin Người Dùng</span>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-25 border-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control bg-dark text-light border-secondary" disabled />
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Họ</label>
                            <input asp-for="FirstName" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Tên</label>
                            <input asp-for="LastName" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Số Điện Thoại</label>
                            <input asp-for="PhoneNumber" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa Chỉ</label>
                            <input asp-for="Address" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="City" class="form-label">Thành Phố</label>
                            <input asp-for="City" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PostalCode" class="form-label">Mã Bưu Điện</label>
                            <input asp-for="PostalCode" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">Quốc Gia</label>
                            <input asp-for="Country" class="form-control bg-dark text-light border-secondary" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Vai Trò</label>
                    <div class="row">
                        @foreach (var role in Model.AllRoles)
                        {
                            <div class="col-md-3 mb-2">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="role_@role.Value" name="selectedRoles" value="@role.Value" @(role.Selected ? "checked" : "") />
                                    <label class="form-check-label" for="role_@role.Value">@role.Text</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu Thay Đổi
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}