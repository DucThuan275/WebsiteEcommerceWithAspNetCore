@model BaiTHbuoi1.Areas.Admin.Controllers.UserViewModel

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Người Dùng</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Người Dùng</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-edit me-1"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-user me-2"></i>
                <span class="fw-semibold">Thông Tin Người Dùng</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-light-50">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 text-light-50">Họ:</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4 text-light-50">Tên:</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4 text-light-50">Số Điện Thoại:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Không có" : Model.PhoneNumber)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 text-light-50">Địa Chỉ:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Address) ? "Không có" : Model.Address)</dd>

                        <dt class="col-sm-4 text-light-50">Thành Phố:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.City) ? "Không có" : Model.City)</dd>

                        <dt class="col-sm-4 text-light-50">Mã Bưu Điện:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.PostalCode) ? "Không có" : Model.PostalCode)</dd>

                        <dt class="col-sm-4 text-light-50">Quốc Gia:</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Country) ? "Không có" : Model.Country)</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3">
                <h5 class="text-light-50 fs-6 mb-2">Vai Trò</h5>
                <div>
                    @foreach (var role in Model.Roles.Split(',', StringSplitOptions.RemoveEmptyEntries))
                    {
                        <span class="badge bg-primary me-1">@role.Trim()</span>
                    }
                </div>
            </div>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>