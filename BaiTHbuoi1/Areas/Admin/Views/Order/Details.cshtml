@model BaiTHbuoi1.Models.Order

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Đơn Hàng</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Đơn Hàng</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card bg-dark text-light border-0 shadow-sm mb-4">
                <div class="card-header bg-dark border-secondary py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-shopping-cart me-2"></i>
                            <span class="fw-semibold">Đơn Hàng #@Model.Id</span>
                        </div>
                        <div>
                            <span class="text-light-50">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title mb-4">Sản Phẩm Trong Đơn</h5>
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0">
                            <thead class="bg-dark-subtle text-light">
                                <tr>
                                    <th>Sản Phẩm</th>
                                    <th>Đơn Giá</th>
                                    <th>Số Lượng</th>
                                    <th class="text-end">Thành Tiền</th>
                                </tr>
                            </thead>
                            <tbody class="border-top-0">
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (item.Product != null && !string.IsNullOrEmpty(item.Product.ImageUrl))
                                                {
                                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="me-2 rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-dark-subtle d-flex align-items-center justify-content-center rounded me-2" style="width: 50px; height: 50px;">
                                                        <i class="fas fa-box text-light-50"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div>@(item.Product?.Name ?? "Sản phẩm không xác định")</div>
                                                    @if (item.Product != null)
                                                    {
                                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-light-50 small">Xem sản phẩm</a>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.UnitPrice.ToString("N0") ₫</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-end">@item.Subtotal.ToString("N0") ₫</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                    <td class="text-end fw-bold">@Model.TotalAmount.ToString("N0") ₫</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-dark text-light border-0 shadow-sm mb-4">
                <div class="card-header bg-dark border-secondary py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user me-2"></i>
                        <span class="fw-semibold">Thông Tin Khách Hàng</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.User != null)
                    {
                        <h5>@Model.User.FirstName @Model.User.LastName</h5>
                        <p class="mb-1"><i class="fas fa-envelope me-2"></i> @Model.User.Email</p>
                        <p class="mb-1"><i class="fas fa-phone me-2"></i> @(Model.User.PhoneNumber ?? "Không có")</p>
                        <hr class="border-secondary" />
                    }
                    else
                    {
                        <h5>@Model.ShippingName</h5>
                        <p class="mb-1"><i class="fas fa-phone me-2"></i> @Model.ShippingPhone</p>
                        <hr class="border-secondary" />
                    }
                    <h6 class="text-light-50">Địa Chỉ Giao Hàng</h6>
                    <address>
                        @Model.ShippingAddress<br />
                        @Model.ShippingCity, @Model.ShippingPostalCode<br />
                        @Model.ShippingCountry
                    </address>
                </div>
            </div>

            <div class="card bg-dark text-light border-0 shadow-sm mb-4">
                <div class="card-header bg-dark border-secondary py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-tasks me-2"></i>
                        <span class="fw-semibold">Trạng Thái Đơn Hàng</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label text-light-50">Trạng Thái Hiện Tại</label>
                        <div>
                            @switch (Model.OrderStatus)
                            {
                                case "Pending":
                                    <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                    break;
                                case "Processing":
                                    <span class="badge bg-info">Đang xử lý</span>
                                    break;
                                case "Shipped":
                                    <span class="badge bg-primary">Đã giao hàng</span>
                                    break;
                                case "Delivered":
                                    <span class="badge bg-success">Đã nhận hàng</span>
                                    break;
                                case "Cancelled":
                                    <span class="badge bg-danger">Đã hủy</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.OrderStatus</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light-50">Trạng Thái Thanh Toán</label>
                        <div>
                            @switch (Model.PaymentStatus)
                            {
                                case "Pending":
                                    <span class="badge bg-warning text-dark">Chờ thanh toán</span>
                                    break;
                                case "Completed":
                                    <span class="badge bg-success">Đã thanh toán</span>
                                    break;
                                case "Failed":
                                    <span class="badge bg-danger">Thất bại</span>
                                    break;
                                case "Refunded":
                                    <span class="badge bg-info">Đã hoàn tiền</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@Model.PaymentStatus</span>
                                    break;
                            }
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light-50">Phương Thức Thanh Toán</label>
                        <div>
                            <span class="badge bg-secondary">@(Model.PaymentMethod ?? "Không có")</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <label class="form-label text-light-50">Ghi Chú Đơn Hàng</label>
                            <div class="card bg-dark-subtle border-0">
                                <div class="card-body">
                                    @Model.Notes
                                </div>
                            </div>
                        </div>
                    }
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="status" class="form-label text-light-50">Cập Nhật Trạng Thái</label>
                            <select name="status" id="status" class="form-select bg-dark text-light border-secondary">
                                <option value="Pending" selected="@(Model.OrderStatus == "Pending")">Chờ xử lý</option>
                                <option value="Processing" selected="@(Model.OrderStatus == "Processing")">Đang xử lý</option>
                                <option value="Shipped" selected="@(Model.OrderStatus == "Shipped")">Đã giao hàng</option>
                                <option value="Delivered" selected="@(Model.OrderStatus == "Delivered")">Đã nhận hàng</option>
                                <option value="Cancelled" selected="@(Model.OrderStatus == "Cancelled")">Đã hủy</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save me-1"></i> Cập Nhật Trạng Thái
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="fas fa-arrow-left me-1"></i> Quay Lại Danh Sách
        </a>
    </div>
</div>