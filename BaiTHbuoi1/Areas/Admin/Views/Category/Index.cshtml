@model IEnumerable<BaiTHbuoi1.Models.Category>
@{
    ViewData["Title"] = "Quản Lý Danh Mục";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Quản Lý Danh Mục</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Danh Mục</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <i class="fas fa-table me-2"></i>
                    <span class="fw-semibold">Danh Sách Danh Mục</span>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i> Thêm Mới
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="categoriesTable" class="table table-dark table-hover align-middle mb-0">
                    <thead class="bg-dark-subtle text-light">
                        <tr>
                            <th class="ps-3">Hình Ảnh</th>
                            <th>Tên Danh Mục</th>
                            <th>Mô Tả</th>
                            <th>Thứ Tự Hiển Thị</th>
                            <th class="text-end pe-3">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" class="rounded" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-dark-subtle d-flex align-items-center justify-content-center rounded" style="width: 50px; height: 50px;">
                                            <i class="fas fa-folder text-light-50"></i>
                                        </div>
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.Description))
                                    {
                                        <span class="text-light-50">Không có mô tả</span>
                                    }
                                    else
                                    {
                                        @item.Description
                                    }
                                </td>
                                <td>@item.DisplayOrder</td>
                                <td class="text-end pe-3">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light" data-bs-toggle="tooltip" title="Chỉnh Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info" data-bs-toggle="tooltip" title="Chi Tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/vi.json'
                }
            });

            // Khởi tạo tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}