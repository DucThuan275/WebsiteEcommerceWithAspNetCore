@model BaiTHbuoi1.Models.Category
@{
    ViewData["Title"] = "Thêm Danh Mục Mới";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Thêm Danh Mục Mới</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Danh Mục</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Thêm Mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-plus me-2"></i>
                <span class="fw-semibold">Thông Tin Danh Mục Mới</span>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-25 border-danger" role="alert"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên Danh Mục <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control bg-dark text-light border-secondary" placeholder="Nhập tên danh mục" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô Tả</label>
                            <textarea asp-for="Description" class="form-control bg-dark text-light border-secondary" rows="4" placeholder="Nhập mô tả cho danh mục"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DisplayOrder" class="form-label">Thứ Tự Hiển Thị</label>
                            <input asp-for="DisplayOrder" class="form-control bg-dark text-light border-secondary" placeholder="Nhập thứ tự hiển thị" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="imageFile" class="form-label">Hình Ảnh Danh Mục</label>
                            <input type="file" id="imageFile" name="imageFile" class="form-control bg-dark text-light border-secondary" accept="image/*" onchange="previewImage(this)" />
                            <div class="form-text text-light-50">Định dạng hỗ trợ: JPG, JPEG, PNG, GIF. Kích thước tối đa: 5MB.</div>
                            <div class="mt-3 text-center">
                                <img id="imagePreview" src="/images/no-image.png" alt="Xem trước" class="img-fluid rounded" style="max-height: 200px; object-fit: contain;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu Danh Mục
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-times me-1"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}