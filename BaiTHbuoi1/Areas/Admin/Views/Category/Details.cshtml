@model BaiTHbuoi1.Models.Category
@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Danh Mục</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Danh Mục</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-edit me-1"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-info-circle me-2"></i>
                <span class="fw-semibold">Thông Tin Danh Mục</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;" />
                    }
                    else
                    {
                        <div class="bg-dark-subtle d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                            <div class="text-center">
                                <i class="fas fa-folder fa-5x text-light-50 mb-3"></i>
                                <p class="text-light-50">Không có hình ảnh</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3 text-light-50">Tên Danh Mục:</dt>
                        <dd class="col-sm-9 fw-semibold">@Model.Name</dd>

                        <dt class="col-sm-3 text-light-50">Mô Tả:</dt>
                        <dd class="col-sm-9">
                            @if (string.IsNullOrEmpty(Model.Description))
                            {
                                <span class="text-light-50">Không có mô tả</span>
                            }
                            else
                            {
                                @Model.Description
                            }
                        </dd>

                        <dt class="col-sm-3 text-light-50">Thứ Tự Hiển Thị:</dt>
                        <dd class="col-sm-9">@Model.DisplayOrder</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark border-secondary py-3">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Quay Lại
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-auto">
                    <i class="fas fa-trash me-1"></i> Xóa
                </a>
            </div>
        </div>
    </div>
</div>