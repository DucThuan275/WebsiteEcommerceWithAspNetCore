@model BaiTHbuoi1.Models.News

@{
    ViewData["Title"] = "Thêm Bài Viết Mới";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Thêm Bài Viết Mới</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Tin Tức</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Thêm Mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-plus me-2"></i>
                <span class="fw-semibold">Thêm Bài Viết Mới</span>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-25 border-danger" role="alert"></div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Tiêu Đề <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control bg-dark text-light border-secondary" placeholder="Nhập tiêu đề bài viết" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Nội Dung <span class="text-danger">*</span></label>
                            <textarea asp-for="Content" id="editor" class="form-control bg-dark text-light border-secondary" rows="10"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Author" class="form-label">Tác Giả</label>
                            <input asp-for="Author" class="form-control bg-dark text-light border-secondary" value="@User.Identity?.Name" placeholder="Nhập tên tác giả" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PublishDate" class="form-label">Ngày Đăng</label>
                            <input asp-for="PublishDate" class="form-control bg-dark text-light border-secondary" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="PublishDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IsPublished" class="form-label">Trạng Thái</label>
                            <div class="form-check form-switch">
                                <input asp-for="IsPublished" class="form-check-input" />
                                <label class="form-check-label" for="IsPublished">Đăng ngay</label>
                            </div>
                            <span asp-validation-for="IsPublished" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="imageFile" class="form-label">Hình Ảnh</label>
                            <input type="file" id="imageFile" name="imageFile" class="form-control bg-dark text-light border-secondary" accept="image/*" onchange="previewImage(this)" />
                            <div class="form-text text-light-50">Định dạng hỗ trợ: JPG, JPEG, PNG, GIF. Kích thước tối đa: 5MB.</div>
                            <div class="mt-3 text-center">
                                <img id="imagePreview" src="/images/no-image.png" alt="Xem trước" class="img-fluid rounded" style="max-height: 200px; object-fit: contain;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu Bài Viết
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });

        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imagePreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}