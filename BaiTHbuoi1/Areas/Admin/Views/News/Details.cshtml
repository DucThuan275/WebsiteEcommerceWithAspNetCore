@model BaiTHbuoi1.Models.News

@{
    ViewData["Title"] = "Chi Tiết Bài Viết";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Chi Tiết Bài Viết</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Tin Tức</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Chi Tiết</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                <i class="fas fa-edit me-1"></i> Chỉnh Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-light btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay Lại
            </a>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-newspaper me-2"></i>
                <span class="fw-semibold">Thông Tin Bài Viết</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;" />
                    }
                    else
                    {
                        <div class="bg-dark-subtle d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                            <div class="text-center">
                                <i class="fas fa-image fa-5x text-light-50 mb-3"></i>
                                <p class="text-light-50">Không có hình ảnh</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <h3 class="fw-bold mb-3">@Model.Title</h3>
                    <div class="mb-3">
                        <span class="text-light-50">
                            <i class="fas fa-user me-1"></i> @(Model.Author ?? "Admin") |
                            <i class="fas fa-calendar me-1"></i> @Model.PublishDate.ToString("dd/MM/yyyy")
                        </span>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-light-50 fs-6 mb-2">Trạng Thái</h5>
                        <p>
                            @if (Model.IsPublished)
                            {
                                <span class="badge bg-success px-3 py-2">Đã Đăng</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark px-3 py-2">Bản Nháp</span>
                            }
                        </p>
                    </div>
                    <div>
                        <h5 class="text-light-50 fs-6 mb-2">Nội Dung</h5>
                        <div class="card bg-dark-subtle border-0">
                            <div class="card-body">
                                @Html.Raw(Model.Content)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-dark border-secondary py-3">
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Chỉnh Sửa
                </a>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Quay Lại
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-auto">
                    <i class="fas fa-trash me-1"></i> Xóa
                </a>
            </div>
        </div>
    </div>
</div>