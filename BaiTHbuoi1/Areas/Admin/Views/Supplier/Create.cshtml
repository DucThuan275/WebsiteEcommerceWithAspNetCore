@model BaiTHbuoi1.Models.Supplier

@{
    ViewData["Title"] = "Thêm Nhà Cung Cấp Mới";
}

<div class="container-fluid px-4 py-3 bg-dark text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fs-2 fw-bold mb-1">Thêm Nhà Cung Cấp Mới</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-light-50 text-decoration-none">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-light-50 text-decoration-none">Nhà Cung Cấp</a></li>
                    <li class="breadcrumb-item active text-light" aria-current="page">Thêm Mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card bg-dark text-light border-0 shadow-sm mb-4">
        <div class="card-header bg-dark border-secondary py-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-plus me-2"></i>
                <span class="fw-semibold">Thêm Nhà Cung Cấp Mới</span>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-danger bg-opacity-25 border-danger" role="alert"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên Nhà Cung Cấp <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control bg-dark text-light border-secondary" placeholder="Nhập tên nhà cung cấp" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ContactName" class="form-label">Người Liên Hệ</label>
                            <input asp-for="ContactName" class="form-control bg-dark text-light border-secondary" placeholder="Nhập tên người liên hệ" />
                            <span asp-validation-for="ContactName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control bg-dark text-light border-secondary" type="email" placeholder="Nhập địa chỉ email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Số Điện Thoại</label>
                            <input asp-for="Phone" class="form-control bg-dark text-light border-secondary" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa Chỉ</label>
                            <textarea asp-for="Address" class="form-control bg-dark text-light border-secondary" rows="4" placeholder="Nhập địa chỉ"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu Nhà Cung Cấp
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Quay Lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}