<!-- Categories Section -->
<section class="category-section">
    <div class="container">
        <h2 class="section-title">Danh mục sản phẩm</h2>
        <div class="row">
            @if (ViewBag.Categories != null)
            {
                foreach (var category in ViewBag.Categories)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@category.Id"
                           class="text-decoration-none">
                            <div class="category-card p-3 border rounded shadow-sm h-100">
                                <div class="category-icon text-center mb-3">
                                    <img src="@(string.IsNullOrEmpty(category.ImageUrl) ? "/images/placeholder.jpg" : category.ImageUrl)"
                                         alt="@category.Name"
                                         class="img-fluid rounded-circle"
                                         style="width: 120px; height: 120px; object-fit: cover;">
                                </div>
                                <h3 class="category-title text-center">@category.Name</h3>
                                <p class="mb-0 text-muted text-center">@category.Description</p>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>


        <div class="text-center mt-4">
            <a href="/Product" class="btn btn-outline-primary">Xem tất cả danh mục</a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-section">
    <div class="container">
        <h2 class="section-title">Sản phẩm nổi bật</h2>

        <div class="row">
            @if (ViewBag.FeaturedProducts != null)
            {
                foreach (var product in ViewBag.FeaturedProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="product-card">
                            <div class="product-img-container">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/placeholder.jpg" : product.ImageUrl)" alt="@product.Name">
                                <div class="product-badge">
                                    <span class="badge bg-primary">Nổi bật</span>
                                </div>
                            </div>
                            <div class="product-info">
                                <h3 class="product-title"><a href="/Product/Details/@product.Id">@product.Name</a></h3>
                                <div class="product-category">@product.Category.Name</div>
                                <div class="product-price">
                                    @if (product.DiscountPrice > 0)
                                    {
                                        <span class="original-price">@product.Price.ToString("N0")₫</span>
                                        <span class="sale-price">@product.DiscountPrice.ToString("N0")₫</span>
                                    }
                                    else
                                    {
                                        <span>@product.Price.ToString("N0")₫</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="text-center mt-4">
            <a href="/Product" class="btn btn-outline-primary">Xem tất cả sản phẩm</a>
        </div>
    </div>
</section>

<!-- How It Works Section -->
